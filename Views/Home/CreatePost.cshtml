@model Post

@{
    ViewData["Title"] = "Create New Post";
}

<div>
    <div class="Display-2 ">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="row">
        <form method="post">
            <div class="form-group">
                <label asp-for="Title" class="label-control"></label>
                <input type="text" asp-for="Title" class="form-control">
            </div>
            <div class="form-group" class="label-control">
                <label asp-for="PostBody"></label>
                <input type="text" asp-for="PostBody" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3 mb-3">
            </div>
            <div class="form-group">
                <a asp-contoller="Home" asp-action="Index" class="btn btn-outline-secondary">Back To Home</a>
            </div>
        </form>
    </div>
</div>